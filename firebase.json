{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "src",
    "ignore": [
      "firebase.json",
      "/.",
      "/node_modules/"
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          },
          {
            "key": "Content-Type",
            "value": "text/javascript"
          }
        ]
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
